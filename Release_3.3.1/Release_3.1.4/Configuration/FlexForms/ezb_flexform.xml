<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
  <sheets>
    <sDEF>
		<ROOT>
			<TCEforms>
				<sheetTitle>LLL:EXT:lang/locallang_general.xml:LGL.startingpoint</sheetTitle>
			</TCEforms>
			<type>array</type>
			<el>
			
				<switchableControllerActions>
					<TCEforms>
						<label>Ausgabe</label>
						<onChange>reload</onChange>
						<config>
							<type>select</type>
							<items type="array">
								<numIndex index="0" type="array">
									<numIndex index="0">Liste</numIndex>
									<numIndex index="1">Ezb->displayList</numIndex>
								</numIndex>
								<numIndex index="1" type="array">
									<numIndex index="0">Detailansicht</numIndex>
									<numIndex index="1">Ezb->displayDetail</numIndex>
								</numIndex>
								<numIndex index="3" type="array">
									<numIndex index="0">Sidebar-Suchformular</numIndex>
									<numIndex index="1">Ezb->displayMiniForm</numIndex>
								</numIndex>								
								<numIndex index="4" type="array">
									<numIndex index="0">Suchformular</numIndex>
									<numIndex index="1">Ezb->displayForm</numIndex>
								</numIndex>									
							</items>
						</config>
					</TCEforms>
				</switchableControllerActions>
				<settings.flexform.detailPid>
					<TCEforms>
						<exclude>1</exclude>
						<label>Detailseite</label>
						<displayCond><![CDATA[FIELD:switchableControllerActions:!IN:Ezb->displayDetail,Ezb->displayMiniForm,Ezb->displayForm]]></displayCond>
						<config>
							<type>group</type>
							<internal_type>db</internal_type>
							<allowed>pages</allowed>
							<size>1</size>
							<maxitems>1</maxitems>
							<minitems>0</minitems>
							<show_thumbs>1</show_thumbs>
						</config>
					</TCEforms>
				</settings.flexform.detailPid>
				<settings.flexform.listPid>
					<TCEforms>
						<exclude>1</exclude>
						<label>Listenausgabe</label>
						<displayCond><![CDATA[FIELD:switchableControllerActions:=:Ezb->displayForm]]></displayCond>
						<config>
							<type>group</type>
							<internal_type>db</internal_type>
							<allowed>pages</allowed>
							<size>1</size>
							<maxitems>1</maxitems>
							<minitems>0</minitems>
							<show_thumbs>1</show_thumbs>
						</config>
					</TCEforms>
				</settings.flexform.listPid>				

				<settings.flexform.searchPid>
					<TCEforms>
						<exclude>1</exclude>
						<label>Seite mit Detailsuche</label>
